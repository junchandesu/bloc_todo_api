<div class="container">
	<h1> Things to do List </h1>
		<% @lists.each do |list| %>
			<p>
				<h4><%= link_to list.title, list_path(list) %>  <%= "Permission: #{list.permissions}" %></h4>
				| <%= link_to "Edit", edit_list_path(list) %>
				| <%= link_to "Delete", list_path(list), method: :delete %>
			</p>
		<% end %>
		<br/>
		<%= link_to "Add a new ToDo item.", new_list_path, class:"label label-warning" %>
</div>
