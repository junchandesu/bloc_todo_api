<%= form_for ([list, item]) do |f| %>
 
  <div class="form-group">
    <%= f.label :todo %><br />
    <%= f.text_field :todo, autofocus: true, class: 'form-control',  placeholder: "Enter the todo item." %> 
  </div>
  <div class="form-group">
    <%= f.label :memo %><br />
    <%= f.text_field :memo, class: 'form-control',placeholder: "Enter a memo for the item if there is any." %>  
  </div>
  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-default' %>
  </div>
<% end %>
